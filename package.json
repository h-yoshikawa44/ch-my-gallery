{
  "name": "ch-my-gallery",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint-check": "yarn lint:stylelint && yarn check:prettier",
    "lint:stylelint": "stylelint \"./css/**/*.css\"",
    "check:prettier": "prettier --check \"./**/*.{html,js,ts,json}\"",
    "fix": "yarn fix:stylelint && yarn fix:prettier",
    "fix:stylelint": "yarn lint:stylelint --fix",
    "fix:prettier": "yarn check:prettier --write",
    "prepare": "simple-git-hooks || echo 'Can not set git hooks'"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "lint-staged": "^12.0.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "vite": "^2.6.4"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "css/**/*.css": [
      "stylelint --fix --quiet"
    ],
    "./**/*.{html,js,ts,json}": [
      "prettier --write --loglevel=error"
    ]
  }
}
